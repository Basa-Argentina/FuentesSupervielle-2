package com.security.recursos;

import java.text.SimpleDateFormat;

/**
 * 
 * @author Federico Muñoz
 * @Modificado Gabriel Mainero
 * Se modifico el formato de fechas
 *
 */
public class Configuracion {
	public final static SimpleDateFormat formatoFechaFormularios;
	public final static SimpleDateFormat formatoFechaHoraFormularios;
	public final static SimpleDateFormat formatoFechaNombreArchivos;
	static{
		formatoFechaFormularios=new SimpleDateFormat("dd/MM/yyyy");
		formatoFechaFormularios.setLenient(false);
		formatoFechaHoraFormularios=new SimpleDateFormat("dd/MM/yyyy HH:mm");
		formatoFechaNombreArchivos=new SimpleDateFormat("yyyy-MM-dd-HH-mm");
	}
}
